{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2020"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "target",
    "rootDirs": ["lib", "src"],
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": false,
    "target": "es2017"
  }
}
